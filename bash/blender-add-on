#!/bin/bash
# blender-add-on

Version=3.6
User=sgs
Path=/home/$User/Bilder/Blender/Add-ons/


echo "Check your .zip files :-)"

ls $Path

while true; do
    read -p "Continue? " yn
    case $yn in
        [Yy]* ) rm -R /home/$User/.config/blender/$Version/scripts/addons/*.*;;
        [Nn]* ) exit;;
        * ) echo "Please answer yes or no.";;
    esac
done

unzip Bilder/Blender/Add-ons/*.zip  -d /home/$User/.config/blender/$Version/scripts/addons/

echo "Done"
